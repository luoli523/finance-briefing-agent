{
  "name": "finance-briefing-agent",
  "version": "1.0.0",
  "description": "AI-powered finance briefing generator",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "help": "tsx src/scripts/help.ts",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "collect": "tsx src/scripts/collect.ts",
    "collect:yahoo": "tsx src/scripts/collect-yahoo.ts",
    "collect:finnhub": "tsx src/scripts/collect-finnhub.ts",
    "collect:fred": "tsx src/scripts/collect-fred.ts",
    "collect:sec": "tsx src/scripts/collect-sec.ts",
    "collect:rss": "tsx src/scripts/collect-rss.ts",
    "collect:congress": "tsx src/scripts/collect-congress.ts",
    "collect:hedgefund": "tsx src/scripts/collect-hedgefund.ts",
    "collect:prediction": "tsx src/scripts/collect-prediction.ts",
    "collect:sentiment": "tsx src/scripts/collect-sentiment.ts",
    "analyze": "tsx src/scripts/analyze.ts",
    "analyze:intelligent": "tsx src/scripts/analyze-intelligent.ts",
    "analyze:enhanced": "tsx src/scripts/analyze-enhanced.ts",
    "generate": "tsx src/scripts/generate.ts",
    "generate:intelligent": "tsx src/scripts/generate-intelligent.ts",
    "generate:pro": "tsx src/scripts/generate-professional-briefing.ts",
    "generate:quick": "tsx src/scripts/generate-professional-briefing.ts --skip-llm",
    "send": "tsx src/scripts/generate-professional-briefing.ts --send-only",
    "generate:infographic-enhanced": "tsx src/scripts/generate-infographic-enhanced.ts",
    "generate:nlm-infographic": "tsx src/scripts/generate-notebooklm-infographic.ts",
    "generate:nlm-slides": "tsx src/scripts/generate-notebooklm-infographic.ts -- slides",
    "workflow:intelligent": "tsx src/scripts/run-intelligent-workflow.ts",
    "workflow:pro": "npm run collect && npm run analyze && npm run generate:pro",
    "workflow:full": "npm run collect && npm run analyze && npm run generate:pro && npm run generate:nlm-infographic && npm run generate:nlm-slides && npm run send-email && npm run send-telegram",
    "verify:config": "tsx src/scripts/verify-config.ts",
    "daily": "npm run workflow:full",
    "send-email": "tsx src/scripts/send-email.ts",
    "send-telegram": "tsx src/scripts/send-telegram.ts"
  },
  "keywords": [
    "finance",
    "briefing",
    "ai",
    "stock",
    "market"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3",
    "https-proxy-agent": "^7.0.6",
    "marked": "^17.0.1",
    "nodemailer": "^7.0.12",
    "rss-parser": "^3.13.0",
    "yahoo-finance2": "^3.11.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^7.0.5",
    "puppeteer": "^24.36.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
